# Navegar entre espacios de trabajo siguiente/anterior
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# Nombres de espacios de trabajo
set $terminal    "   Terminal "
set $code    "   Code "
set $browser    "   Browser "
set $files    "   Files "
set $chat    "   Chat "
set $general    "   General "

# Cambiar a espacio de trabajo
bindsym $mod+1 workspace $terminal
bindsym $mod+2 workspace $code
bindsym $mod+3 workspace $browser
bindsym $mod+4 workspace $files
bindsym $mod+5 workspace $chat
bindsym $mod+6 workspace $general

# Mover contenedor enfocado a espacio de trabajo
bindsym $mod+Ctrl+1 move container to workspace $terminal
bindsym $mod+Ctrl+2 move container to workspace $code
bindsym $mod+Ctrl+3 move container to workspace $browser
bindsym $mod+Ctrl+4 move container to workspace $files
bindsym $mod+Ctrl+5 move container to workspace $chat
bindsym $mod+Ctrl+6 move container to workspace $general

# Mover a espacio de trabajo con contenedor enfocado
bindsym $mod+Shift+1 move container to workspace $terminal; workspace $terminal
bindsym $mod+Shift+2 move container to workspace $code; workspace $code
bindsym $mod+Shift+3 move container to workspace $browser; workspace $browser
bindsym $mod+Shift+4 move container to workspace $files; workspace $files
bindsym $mod+Shift+5 move container to workspace $chat; workspace $chat
bindsym $mod+Shift+6 move container to workspace $chat; workspace $general
